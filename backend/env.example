# Backend Environment Variables for DDEV

# Database
DATABASE_URL="postgresql://db:db@db:5432/db"

# JWT Secret
JWT_SECRET=your-secret-key-here

# Frontend URL for CORS
FRONTEND_URL=https://your-project.ddev.site

# API URL
API_URL=https://your-project.ddev.site

# AWS S3 (if using)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# IDrive S3 Configuration
IDRIVE_ACCESS_KEY_ID=your-idrive-access-key
IDRIVE_SECRET_ACCESS_KEY=your-idrive-secret-key
IDRIVE_REGION=us-east-1
IDRIVE_ENDPOINT=https://your-idrive-endpoint
IDRIVE_BUCKET_NAME=your-idrive-bucket

# Chunked Upload Configuration
UPLOAD_CHUNK_SIZE=5242880
UPLOAD_MAX_CONCURRENT_CHUNKS=3
UPLOAD_MAX_RETRIES=3
UPLOAD_CHUNK_SIZE_THRESHOLD=5242880

# RabbitMQ (if using)
RABBITMQ_URL=amqp://rabbitmq:5672

# Redis (if using)
REDIS_URL=redis://redis:6379 
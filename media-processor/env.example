# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# IDRIVE S3 Configuration
IDRIVE_REGION=us-east-1
IDRIVE_ENDPOINT=https://your-idrive-endpoint.com
IDRIVE_ACCESS_KEY_ID=your_access_key_id
IDRIVE_SECRET_ACCESS_KEY=your_secret_access_key
IDRIVE_BUCKET_NAME=your_bucket_name

# API Backend Configuration
API_BASE_URL=http://localhost:8088
API_WEBHOOK_SECRET=your_webhook_secret

# Processing Configuration
MAX_CONCURRENT_JOBS=3
VIDEO_MAX_DURATION=300 # 5 minutes in seconds
VIDEO_MAX_FILE_SIZE=500000000 # 500MB in bytes
IMAGE_MAX_FILE_SIZE=50000000 # 50MB in bytes

# FFmpeg Configuration
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Video Processing Settings
VIDEO_QUALITIES=1080p,720p,480p
VIDEO_BITRATES=5000k,2500k,1000k
THUMBNAIL_TIME=00:00:05 # Extract thumbnail at 5 seconds

# Image Processing Settings
IMAGE_QUALITIES=original,large,medium,small
IMAGE_SIZES=1920x1080,1280x720,800x600,400x300

# Logging
LOG_LEVEL=info
LOG_FILE=logs/media-processor.log

# Health Check
HEALTH_CHECK_PORT=3002 